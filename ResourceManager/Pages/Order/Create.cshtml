@page
@model ResourceManager.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Створення нового замовлення</h1>

<hr />
<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="form-group col-md-4">
                    <label asp-for="Order.OrderNum" class="control-label"><b>Номер замовлення:</b></label>
                    <input asp-for="Order.OrderNum" class="form-control" />
                    <span asp-validation-for="Order.OrderNum" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Order.ShipmentPrice" class="control-label"><b>Вартість доставки:</b></label>
                    <input asp-for="Order.ShipmentPrice" class="form-control" />
                    <span asp-validation-for="Order.ShipmentPrice" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Order.SupplierId" class="control-label"><b>Постачальник:</b></label>
                    <select asp-for="Order.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                </div>
            </div>

            <h3>Предмети:</h3>

            @for (int i = 0; i < Model.Order.OrderItems.Count(); i++)
            {
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="Order.OrderItems[i].ResourceId" class="control-label"><b>Ресурс:</b></label>
                <select asp-for="Order.OrderItems[i].ResourceId" class="form-control" asp-items="ViewBag.ResourceId"></select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Order.OrderItems[i].Quantity" class="control-label"><b>Кількість:</b></label>
                <input asp-for="Order.OrderItems[i].Quantity" class="form-control" />
                <span asp-validation-for="Order.OrderItems[i].Quantity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Order.OrderItems[i].UnitPrice" class="control-label"><b>Ціна за одиницю:</b></label>
                <input asp-for="Order.OrderItems[i].UnitPrice" class="form-control" />
                <span asp-validation-for="Order.OrderItems[i].UnitPrice" class="text-danger"></span>
            </div>
        </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
